---
import siteConfig from "../site.config";
import SiteIdentity from "./SiteIdentity.astro";
const currentYear = new Date().getFullYear();
---

<footer class="kanit-light text-xs sm:text-sm">
  <div
    class="footer-identity flex flex-col items-center justify-center pb-3 min-w-full"
  >
    <a href={import.meta.env.BASE_URL + "/"}>
      <SiteIdentity
        logoWidth={48}
        logoHeight={48}
        loading="lazy"
        textSize="text-xl"
      />
    </a>
    <span>{siteConfig.subtitle}</span>
    <div
      class="flex flex-row items-center justify-around sm:justify-center gap-2 sm:gap-6 pt-6 pb-3 sm:px-6 text-center"
    >
      {
        siteConfig.footerNavLinks?.map((link) => (
          <a href={link.href} title={link.text}>
            {link.text}
          </a>
        ))
      }
      <a
        href="https://github.com/djsiddz/space-ahead"
        title="Download Space Ahead Astro Theme"
        target="_blank">Download Theme</a
      >
    </div>
  </div>
  <div
    class="footer-secondary flex flex-col sm:flex-row items-center justify-between gap-6 min-w-full"
  >
    <div
      class="flex flex-row gap-3 sm:gap-4 items-center justify-start text-balance"
    >
      <a href="https://github.com/djsiddz" target="_blank">
        <span>&copy; {currentYear}</span>
        {siteConfig.title}. All rights reserved.
      </a>
      <a
        href="https://github.com/djsiddz/space-ahead"
        title="Star this on GitHub"
        target="_blank">‚≠ê</a
      >
    </div>
    <div class="flex flex-row gap-3 sm:gap-4 items-center justify-end-safe">
      {
        siteConfig.socialLinks?.map((link) => (
          <a href={link.href} title={link.text} target="_blank">
            {link.text}
          </a>
        ))
      }
    </div>
  </div>
</footer>
<style>
  footer {
    width: calc(100% - 3rem);
    /* font-size: 0.75rem; */
    padding: 1rem 0;
  }
  .footer-identity {
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }
  @media (orientation: portrait) {
    footer {
      /* font-size: 0.5rem; */
      gap: 1rem;
    }
    .footer-secondary {
      gap: 1.5rem;
    }
  }
</style>
