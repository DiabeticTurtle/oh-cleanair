---
import MainLayout from "../layouts/MainLayout.astro";

const allPosts = await Astro.glob("../pages/posts/*.md")
---

<MainLayout pageTitle="Space Ahead | Stories">
  <h1 class="honk-ff balance-text">
    The <span class="blinking">Stories</span>
  </h1>
  <p class="kanit-regular balance text">
    This is where I post about my space exploration journeys.
  </p>
  <ul class="posts-list kanit-bold">
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</MainLayout>
<style>
  h1 {
    padding-top: 2rem;
  }
  .posts-list {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    row-gap: 0;
    column-gap: 1rem;
    list-style-type: none;
    align-items: center;
  }
  .posts-list li {
    padding: 0 0 2rem 0;
  }
  @media (orientation: portrait) {
    .posts-list {
      align-items: start;
      padding-left: 0;
    }
    .posts-list li {
      padding: 0 0 1rem 0;
    }
  }
</style>
